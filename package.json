  "scripts": {
    "test": "bin/imba scripts/test-runner.imba",
    "clean": "find test/apps -name '*.js' -type f -delete && rm -r dist/",
    "bootstrap": "node scripts/build-parser.js && node scripts/build.js",
    "build": "node scripts/build.js",
    "build-parser": "node scripts/build-parser.js",
    "watch": "node scripts/build.js -w",
    "prerelease": "lerna publish --dist-tag pre"
  },
  "bugs": "https://github.com/imba/imba/issues",
  "version": "2.0.0-alpha.100",
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/imba/imba/raw/master/LICENSE"
    }
  ],
  "engines": {
    "node": ">=13.10.0"
  },
  "directories": {},
  "main": "./index.js",
  "type": "commonjs",
  "browser": {
    "imba": "./dist/imba.js",
    "path": "./vendor/path.js",
    "compiler": "./dist/compiler.js",
    "./core.imba": "./build/src/imba/core.imba.js"
  },
  "exports": {
    "./core": {
      "require": "./dist/imba.node.cjs",
      "default": "./build/src/imba/core.imba.mjs",
      "browser": "./vendor/colors.js"
    },
    "./loader": "./loader.js",
    "./compiler": {
      "require": "./dist/compiler.cjs",
      "default": "./dist/compiler.mjs"
    }
  },
  "bin": {
    "imba": "./bin/imba",
    "imbac": "./bin/imbac",
    "imbabuild": "./bin/imbabuild"
  },
  "preferGlobal": true,
  "homepage": "https://imba.io",
  "repository": {
    "type": "git",
    "url": "git://github.com/imba/imba.git"
  },
  "devDependencies": {
    "fdir": "^4.1.0",
    "micromatch": "^4.0.2",
    "picomatch": "^2.2.2",
    "puppeteer": "^2.1.1"
  },
  "dependencies": {
    "chokidar": "^3.4.3",
    "esbuild": "^0.8.21",
    "readdirp": "^3.5.0"
  }
}
