    "README.md",
    "LICENSE",
    "package.json"
  ],
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "dev": "cross-env npx imba build -wM --node.external +devDependencies --esm src/index.imba",
	"build": "cross-env rimraf dist && npm run build:esm && npm run build:cjs",
    "build:esm": "npx imba build --keep -M --node.external +devDependencies --esm src/index.imba",
    "build:cjs": "npx imba build --keep -M --node.external +devDependencies src/index.imba"
  },
  "engines": {
    "node": "^14.18.0 || >= 16"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imba/imba.git",
    "directory": "packages/vite-plugin-imba"
  },
  "keywords": [
    "vite-plugin",
    "vite plugin",
    "vite",
    "imba"
  ],
  "bugs": {
    "url": "https://github.com/imba/imba/issues"
  },
  "homepage": "https://imba.io",
  "dependencies": {
    "@rollup/pluginutils": "^4.2.1",
    "cross-env": "^7.0.3",
    "debug": "^4.3.4",
    "deepmerge": "^4.2.2",
    "kleur": "^4.1.5",
    "magic-string": "^0.26.2"
  },
  "peerDependencies": {
    "diff-match-patch": "^1.0.5",
    "vite": "^3.0.0"
  },
