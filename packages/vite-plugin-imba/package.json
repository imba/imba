    "@types/diff-match-patch": "^1.0.32",
    "diff-match-patch": "^1.0.5",
    "esbuild": "^0.15.5",
    "imba": "../imba",
    "rimraf": "^3.0.2",
    "rollup": "^2.78.1",
    "vite": "^3.0.9"
  }
}
